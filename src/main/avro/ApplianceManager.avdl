  AvroApplianceManagerStatus getStatus();
  AvroApplianceStatus getApplianceStatus(AvroApplianceId id);
  AvroApplianceInstanceStatus getApplianceInstanceStatus(AvroApplianceInstanceId id);

  array<AvroApplianceId> listAppliances();
  array<AvroApplianceInstanceId> listApplianceInstances(AvroApplianceId id);
