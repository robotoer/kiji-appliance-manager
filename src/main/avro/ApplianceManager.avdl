  }

  record AvroApplianceInstanceConfiguration {

  }

  record AvroApplianceInstanceConfiguration {

  }

  record AvroApplianceInstanceStatus {

  }


  // Appliance Records.
  record AvroApplianceId {

  }

  record AvroApplianceConfiguration {

  }

  record AvroApplianceStatus {

  }


  // ApplianceManager Records.
  record AvroApplianceManagerId {

  }

  record AvroApplianceManagerConfiguration {
    string name;
    int memory;
    int port;
    int cores;
    string curatorAddress;
    array<string> dependencies;
